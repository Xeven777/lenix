{
  "manifest_version": 3,
  "name": "Lenix Smooth Scroll",
  "version": "1.0",
  "description": "Add smooth scrolling to any website with Lenis",
  "permissions": ["scripting", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Lenix Smooth Scroll"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lenis.min.js", "content.js"],
      "run_at": "document_start"
    }
  ]
}
